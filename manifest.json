{
  "manifest_version": 3,
  "name": "Ramal Vip",
  "version": "1.0.0",
  "description": "Fa√ßa e receba chamadas diretamente do seu navegador.",
  "permissions": [
    "activeTab",
    "offscreen",
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "Ramal Vip",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
